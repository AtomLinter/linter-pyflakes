{
  "name": "linter-pyflakes",
  "main": "./lib/init.js",
  "version": "0.3.1",
  "description": "Linter plugin for pyflakes",
  "repository": "https://github.com/AtomLinter/linter-pyflakes",
  "license": "MIT",
  "engines": {
    "atom": ">=1.4.0 <2.0.0"
  },
  "configSchema": {
    "pyflakesExecutablePath": {
      "type": "string",
      "title": "Executable Path",
      "description": "Full path to `pyflakes`, eg. output of `which pyflakes`",
      "default": "pyflakes"
    }
  },
  "dependencies": {
    "atom-linter": "^9.0.0",
    "atom-package-deps": "^4.0.1"
  },
  "devDependencies": {
    "eslint": "^3.15.0",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-import": "^2.2.0"
  },
  "package-deps": [
    "linter"
  ],
  "scripts": {
    "lint": "eslint ."
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true,
      "browser": true
    }
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  }
}
